<div class="container-fluid">
  <div class="row">
      <div class="col-md-9 col-sm-9">
          <h2>List of accounts to active</h2>
      </div>
      <div class="col-md-3 col-sm-3">
        <%# if has_permission(controller_path,"create") %>
          <%#= render "actions" %>
        <%# elsif has_permission(controller_path,"pre_creation_user") %>
          <%#= link_to "New User" ,pre_creation_user_admin_users_path ,data: {turbolinks: false}, class: "btn btn-default gray-bg",style: "margin-top: 10px;"%>
        <%# end %>
      </div>
  </div>
  <div class="row">
      <div class="col-md-12">
        <div id="search-information" class="box white-bg">
          <div class="table-responsive">
            <table class="table">
              <thead class="table-heading">
                  <tr>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Birth Date</th>
                    <th>Status</th>
                    <% if has_permission(controller_path,"update") || has_permission(controller_path,"active_user_account") %>
                      <th>Action</th>
                    <% end %>
                  </tr>
              </thead>
              <tbody>
              	<%= render 'account_to_active', users: @resources %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
  </div>
</div>
