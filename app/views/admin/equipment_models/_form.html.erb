<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 col-sm-12">
      <h2><%= action_type(@resource) %> Equipment Model</h2>
    </div>
  </div>
  <div class="row">
  	<div class="has-error">
  	  <% if @resource.errors.any? %>
  	    <div class="blockquote-box clearfix">
  	      <span class="help-block">
  	       <b>ERROR:</b>
  	        <ul>
  		        <% @resource.errors.full_messages.each do |msg| %>
  		          <li><%= msg %></li>
  		      	<% end %>
  	     		</ul>
  	     </span>
  	    </div>
  	  <% end %>
  	</div>
  </div>
  <div class="row">
    <div class="col-md-12">
    	<%= form_for [:admin, @resource],class: "form-horizontal" do |f| %>
        <div id="search-information" class="box white-bg">
          <div class="form-group">
            <div class="row">
              <div class="col-md-6 col-sm-6">
                <label for="Name" class="col-sm-12"><%= t('activerecord.models.equipment_model.fields.Name') %></label>
               	<%= f.text_field :name,class: "form-control",placeholder: "Name",required: "required" %>
              </div>
              <div class="col-md-6 col-sm-6">
                <label for="Equipment Brand" class="col-sm-12"><%= t('activerecord.models.equipment_model.fields.Equipment Brand') %></label>
               	<%= f.select :equipment_brand_id, EquipmentBrand.all.collect { |eb| [eb.name, eb.id] }, {},{class: "form-control",required: "required" } %>
              </div>
              <div class="clearfix"></div>
              <div class="col-md-6 col-sm-6">
                <label for="Description" class="col-sm-12"><%= t('activerecord.models.equipment_model.fields.Description') %></label>
                <%= f.text_area :description,class: "form-control",placeholder: "Description" %>
              </div>
              <div class="col-md-6 col-sm-6">
                  <label for="Equipment Type" class="col-sm-12"><%= t('activerecord.models.equipment_model.fields.Equipment Type') %></label>
                  <%= f.select :equipment_type_id, EquipmentType.all.collect { |et| [et.name, et.id] },{prompt: "Select Equipment Type"}, {class: "form-control width-100",required: "required" } %><br>
              </div>
              <div class="col-md-2 col-md-offset-10 col-sm-4">
              	<%= f.submit action_type_for_button(@resource),class: "btn btn-default gray-bg pull-right" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
