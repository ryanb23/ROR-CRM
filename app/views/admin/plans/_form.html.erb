<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 col-sm-12">
      <h2><%= action_type(@resource) %> Plan</h2>
    </div>
  </div>
  <div class="row">
  	<div class="has-error">
  	  <% if @resource.errors.any? %>
  	    <div class="blockquote-box clearfix">
  	      <span class="help-block">
  	       <b>ERROR:</b>
  	        <ul>
  		        <% @resource.errors.full_messages.each do |msg| %>
  		          <li><%= msg %></li>
  		      	<% end %>
  	     		</ul>
  	     </span>
  	    </div>
  	  <% end %>
  	</div>
  </div>
  <div class="row">
    <div class="col-md-12">
    	<%= form_for [:admin, @resource],class: "form-horizontal" do |f| %>
        <div id="search-information" class="box white-bg">
          <div class="form-group">
            <div class="row">
              <div class="col-md-6 col-sm-6">
                <label for="Name" class="col-sm-12"><%= t('activerecord.models.plan.fields.Name') %></label>
               	<%= f.text_field :name,class: "form-control",placeholder: "Name",required: "required" %>
              </div>
              <div class="col-md-6 col-sm-6">
                <label for="quota" class="col-sm-12"><%= t('activerecord.models.plan.fields.Quota') %></label>
                <%= f.number_field :quota, step: "any",class: "form-control",placeholder: "Quota",required: "required" %>
              </div>
              <div class="col-md-6 col-sm-6">
                <label for="Description" class="col-sm-12"><%= t('activerecord.models.plan.fields.Description') %></label>
                <%= f.text_area :description,class: "form-control",placeholder: "Description",required: "required" %>
              </div>
              <div class="col-md-6 col-sm-6">
                <label for="Price" class="col-sm-12"><%= t('activerecord.models.plan.fields.Price') %></label>
                <%= f.text_field :price,class: "form-control",placeholder: "Price",required: "required" %>
              </div>
              <div class="col-md-2 col-md-offset-10 col-sm-4">
              	<!-- <%= f.submit "Add",class: "btn btn-default gray-bg pull-right" %> -->
              	<%= f.submit action_type_for_button(@resource),class: "btn btn-default gray-bg pull-right" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
